    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center_vertical"
        android:background="@drawable/bg_publish_message"
        android:id="@+id/publish_message"
        android:maxWidth="200dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="10dp"
        android:layout_height="wrap_content" />
    <cn.edu.uestc.meet_on_the_road_of_uestc.layout.CircleImageView
        android:src="@mipmap/ic_icontest"
        android:id="@+id/publish_image"
        android:layout_width="50dp"
        android:layout_height="50dp"></cn.edu.uestc.meet_on_the_road_of_uestc.layout.CircleImageView>
</LinearLayout>