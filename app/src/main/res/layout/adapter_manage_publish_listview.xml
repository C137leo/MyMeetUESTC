<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/publish_help_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重金求子"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textSize="30sp"/>
            <LinearLayout
                android:id="@+id/publish_detail_layout"
                android:layout_alignLeft="@id/publish_help_title"
                android:layout_below="@id/publish_help_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/publish_help_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="老王"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三天前"
                    android:layout_marginStart="20dp"
                    android:id="@+id/publish_help_time"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_alignLeft="@id/publish_detail_layout"
                android:layout_below="@id/publish_detail_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="接受时间:"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/publish_help_accept_time"
                    android:text="三天前"/>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/shape_gradient_loginbutton"
                android:id="@+id/finish_help_button"
                android:text="结束帮帮"
                android:layout_marginTop="60dp"
                android:layout_marginStart="300dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_line"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <cn.edu.uestc.meet_on_the_road_of_uestc.layout.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_icontest"
                android:id="@+id/publish_help_accept_image"
                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姚大美人"
                    android:id="@+id/publish_help_accept_name"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公共与管理学院"
                    android:id="@+id/publish_help_accept_major"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大一"
                    android:id="@+id/publish_help_accept_grade"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_help_accept_status"
                android:text="已接受帮帮"
                android:layout_gravity="center"
                android:layout_marginStart="100dp"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>