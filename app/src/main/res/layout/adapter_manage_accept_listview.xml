<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:alpha="5"
        android:layout_gravity="center_horizontal"
        android:layout_width="330dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="330dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/accept_help_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重金求子"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:id="@+id/accept_detail_layout"
                    android:layout_alignLeft="@id/accept_help_title"
                    android:layout_below="@id/accept_help_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/accept_help_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="老王"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三天前"
                        android:layout_marginStart="20dp"
                        android:id="@+id/accept_publish_help_time"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_alignLeft="@id/accept_detail_layout"
                    android:layout_below="@id/accept_detail_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接受时间:"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/accept_help_accept_time"
                        android:text="三天前"/>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_gradient_loginbutton"
                    android:id="@+id/see_the_route_help"
                    android:text="查看路线"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="230dp"
                    />
            </RelativeLayout>
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_line"/>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.amap.api.maps.MapView
                    android:id="@+id/accept_help_map"
                    android:layout_width="320dp"
                    android:layout_height="100dp"></com.amap.api.maps.MapView>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>