                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:id="@+id/appointment_me_accept_nickname8"
                            android:layout_gravity="center_horizontal"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/appointment_stu_accept_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_expand"/>
        </LinearLayout>
        <Button
            android:id="@+id/appointment_me_accept_start_chat"
            android:layout_marginTop="50dp"
            android:layout_marginStart="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/finish_help_button"
            android:text="开始聊天"/>
    </android.support.v7.widget.CardView>
</FrameLayout>