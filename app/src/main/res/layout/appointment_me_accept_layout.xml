                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/appointment_me_accept_person2"
                            android:src="@mipmap/ic_icontest"/>
                        <TextView
                            android:maxWidth="35dp"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:id="@+id/appointment_me_accept_nickname2"
                            android:layout_gravity="center_horizontal"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/appointment_me_accept_linearLayout3"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <cn.edu.uestc.meet_on_the_road_of_uestc.layout.CircleImageView
                            android:layout_marginStart="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:id="@+id/appointment_me_accept_person3"
