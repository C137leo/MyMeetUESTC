<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#50D3D3D3"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="#00F" />
        <LinearLayout
            android:clickable="true"
            android:id="@+id/selected_time"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ic_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/selected_time_show"
                android:layout_gravity="center"
                android:textColor="#595959"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择时间"/>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/appointment_add_time_cancel"
                android:text="@string/cancel"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#00000000"/>
            <Button
                android:layout_marginStart="10dp"
                android:id="@+id/appointment_add_time_confirm"
                android:text="@string/confirm"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="#00000000"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/appointment_time_selecter"
        android:visibility="gone"
        android:background="#50D3D3D3"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TimePicker
            android:id="@+id/time_picker"
            android:background="@color/white"
            android:layout_width="280dp"
            android:layout_height="wrap_content"></TimePicker>
        <Button
            android:layout_marginStart="220dp"
            android:layout_marginTop="330dp"
            android:background="#00000000"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/appointment_time_pick_confirm"
            android:text="@string/confirm"/>
    </RelativeLayout>
</RelativeLayout>