<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--第一层-->
    <item>
        <shape>
            <solid android:color="@color/grey"/>
        </shape>
    </item>

    <!--第二层-->
    <item
        android:bottom="1dp">
        <shape>
            <solid android:color="@color/white"/>
                <stroke
                    android:width="20px"
                    android:color="#FFFF00" />
        </shape>
    </item>

    <!--第三层-->
    <item
        android:bottom="3dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>